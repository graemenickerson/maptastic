<!-- _newPoint.ejs -->
<form class="edit-point" action="/map/<%= mapObj.map_id %>/editpoint" method="POST">
  <h1><%= mapObj.title %></h1>
  <h2>Edit a point</h3>
  <h3>Select a point to edit</h3>
  <div class="title">
    <label for="title">Title *</label>
    <input type="text" id='title' name="title" placeholder="Title" minlength="1" maxlength="99"required>
  </div>
  <div class="description">
    <label for="description">Description</label>
    <textarea rows="4" id='description' name="description" placeholder="Describe your point..."></textarea>
  </div>
  <div class="image">
    <label for="image">Add a URL with a photo of this location!</label>
    <input type="text" id='image' name="image" placeholder="http://" minlength="1" maxlength="254">
  </div>
  <div class="categories">
    <label for="category">Select a Category: *</label>
      <select id='keywords' name="keywords" required>
      <% for (let category of keywords) { %>
        <option id='dropdown' value="<%= category.id %>"> <%= category.word %>
      <% } %>
      </select>
  </div>
  <input type='hidden' id='pointid' name='pointid' value=''>
  <div class="button">
    <button type="submit" class="btn btn-primary">Update Point</button>
  </div>
</form>

<form class="delete-point" action="/map/<%= mapObj.map_id %>/deletepoint" method="POST">
  <input type='hidden' id='deletepointid' name='deletepointid' value=''>
  <div class="button">
    <button type="submit" id="delete">Delete Point</button>
  </div>
</form>
