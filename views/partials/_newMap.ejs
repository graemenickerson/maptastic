<!-- _newMap.ejs -->


<form class="new-map" action="/map" method="POST">
  <h1>Create New Map:</h1>
  <div class="new-title">
    <label for="title">*  Title </label>
    <input type="tile" name="title" placeholder="Title" minlength="1" maxlength="100" size="32"required>
  </div>
  <div class="new-description">
    <label for="description">Description</label>
    <textarea type="description" name="description" placeholder="Describe your map..." rows="4" cols="30"></textarea>
  </div>
  <div class="new-cat">
    <label for="category">Select a Category: * </label>
      <% for (let category of map_icons) { %>
        <div>
          <input type="radio" id="catRadio-<%= category.id %>" name="catRadio" value="<%= category.id %>"required></input>
          <label for="catRadio-<%= category.id %>"><%= category.name %></label>
        </div>
      <% } %>
  </div>
  <input type='hidden' name='centerlat' id='centerlat' value=''>
  <input type='hidden' name='centerlong' id='centerlong' value=''>
  <input type='hidden' name='zoom' id='zoom' value=''>
  <div>
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>
