<!-- _newMap.ejs -->


<form class="new-map" action="/map" method="POST">
  <h1>Create New Map:</h1>
  <div class="categories">
    <label for="title">Title</label>
    <input type="tile" name="title" placeholder="Title">
  </div>
  <div class="categories">
    <label for="description">Description</label>
    <textarea type="description" name="description" placeholder="Describe your map..."></textarea>
  </div>
  <div class="categories">
    <label for="category">Select a Category:</label>
    <% for (let category of map_icons) { %>
      <input type="radio" name="catRadio" value="<%= category.id %>"><%= category.name %></input>
    <% } %>
  </div>
  <div>
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>
