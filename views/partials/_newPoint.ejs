<!-- _newPoint.ejs -->
<form class="add-point" action="addpoint/add" method="POST">
  <h1><%= mapObj.title %></h1>
  <h2>Add a new point</h3>
    <h3>Select a spot on the map and then fill out this form! </h3>
  <div class="categories">
    <label for="title">Title</label><br>
    <input type="text" name="title" placeholder="Title" minlength="1" maxlength="256">
  </div>
  <div class="categories">
    <label for="description">Description</label><br>
    <textarea rows="4" cols="30" name="description" placeholder="Describe your point..."></textarea>
  </div>
  <div class="categories">
    <label for="image">Add a URL with a photo of this location!</label><br>
    <input type="text" name="image" placeholder="http://" maxlength="256">
  </div>
  <div class="categories">
    <label for="category">Select a Category:</label><br>
      <select name="keywords">
      <% for (let category of keywords) { %>
        <option value="<%= category.id %>"> <%= category.word %>
      <% } %>
        </select>
      </div>
      <div>
        <input type='hidden' id='lati' name='lati' value=''>
        <input type='hidden' id='longi' name='longi' value=''>
      </div>
  <div>
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>
